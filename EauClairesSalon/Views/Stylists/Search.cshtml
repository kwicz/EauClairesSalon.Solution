@{
  Layout = "_Layout";
}
@using EauClairesSalon.Models;
@using System.Collections.Generic;
@model List<EauClairesSalon.Models.Stylist>;

  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card bg-info my-5">
        <div class="card-body">
          <h1>SEARCH</h1>

          @if(Model.Count == 0)
          {
            <p> No stylists match this search </p>
          }
          else
          {
            <ul>
              @foreach(Stylist stylist in Model)
              {
                <li> @Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId}) : @stylist.Name</li>
              }
            </ul>
          }
        </div>
      </div>
    </div>
  </div>     