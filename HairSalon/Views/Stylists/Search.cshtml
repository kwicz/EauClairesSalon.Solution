@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@using System.Collections.Generic;
@model List<HairSalon.Models.Stylist>;

<br>
<section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
  <div class="mdl-card mdl-cell mdl-cell--12-col">
    <div class="mdl-card__supporting-text mdl-grid mdl-grid">
      <h4 class="mdl-cell mdl-cell--12-col">Search Results</h4>
      @if(Model.Count == 0)
      {
        <p> No stylists match this search </p>
      }
      else
      {
        <ul>
          @foreach(Stylist stylist in Model)
          {
            <hr>
            <li class="mdl-list__item mdl-list__item--three-line">
              <span class="mdl-list__item-primary-content">
                <i class="material-icons  mdl-list__item-avatar">person</i>
                <span>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</span>
              </span>
            </li>
          }
        </ul>
      }
  </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">@Html.ActionLink("Go back to all stylists", "Index")</button>
      </div>
    </div>
</section>
<br>  